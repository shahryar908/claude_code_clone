{
  "name": "advanced-code-assistant",
  "version": "1.0.0",
  "description": "A sophisticated AI-powered coding assistant that rivals Claude Code",
  "main": "cli/main.js",
  "bin": {
    "codeassistant": "./cli/main.js"
  },
  "scripts": {
    "start": "node cli/main.js",
    "chat": "node cli/main.js chat",
    "analyze": "node cli/main.js analyze",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "dev": "nodemon cli/main.js",
    "build": "pkg cli/main.js --out-path dist",
    "docs": "jsdoc -c jsdoc.conf.json",
    "postinstall": "node scripts/setup.js"
  },
  "keywords": [
    "ai",
    "coding-assistant",
    "claude",
